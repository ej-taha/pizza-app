{
   "extends": [
      "tslint-react",
      "tslint-config-prettier"
   ],
   "linterOptions": {
      "exclude": [
         "config/**/*.js",
         "node_modules/**/*.ts",
         "coverage/lcov-report/*.js"
      ]
   },
   "rules": {
      "jsx-no-lambda": false,
      "semicolon": [
         true,
         "always"
      ],
      "indent": [
         true,
         "spaces",
         2
      ],
      "quotemark": [
         true,
         "single"
      ],
      "no-template-curly-in-string": false
   },
   "defaultSeverity": "warning"
}